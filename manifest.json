{
    "manifest_version": 2,
    "name": "ff-open-with",
    "version": "0.1",
    "description": "Open tabs with external programs.",

    "browser_specific_settings": {
        "gecko": {
            "id": "ff-open-with@example.org",
            "strict_min_version": "50.0"
        }
    },

    "permissions": [
        "nativeMessaging",
        "storage",
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options/options.html"
    }
}
